{
  "name": "file-encryptor",
  "version": "1.0.0",
  "description": "Secure file encryption and decryption tool",
  "type": "module",
  "scripts": {
    "dev": "pnpm build && node dist/server.js",
    "build": "pnpm clean && pnpm build:server && pnpm build:client && pnpm copy:static",
    "build:server": "tsc",
    "build:client": "esbuild src/public/modules/app.ts --bundle --minify --target=es2020 --tree-shaking=true --format=esm --outfile=dist/public/modules/app.js && esbuild src/public/sw.ts --bundle --minify --target=es2020 --tree-shaking=true --format=esm --outfile=dist/public/sw.js",
    "copy:static": "mkdir -p dist/public && cp -r src/public/index.html src/public/manifest.json src/public/icons src/public/screenshots dist/public/",
    "start": "node dist/server.js",
    "generate-icons": "tsx generate-icons.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "encryption",
    "file",
    "security",
    "crypto",
    "pwa"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "esbuild": "^0.25.10",
    "sharp": "^0.34.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
